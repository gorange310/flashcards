<%= paginate cards %>

<% cards.each do |card| %>
  <div class="card">
    <header class="card-title">
      <%= link_to card.title , card_path(card)%>
      <%= link_to "編輯" , edit_card_path(card) %>
      <%= link_to "刪除" , card_path(card), method: :delete, data: {confirm: "確認刪除？"} %>
    </header>

    <div class="card-body">
      <p><%= card.content %></p>
      <%= image_tag card.photo, width: 200 if card.photo.attached? %>
    </div>
  </div>
<% end %>